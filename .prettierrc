{
    "tabWidth": 4,
    "useTabs": false,
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": true,
    "plugins": ["@prettier/plugin-php", "@zackad/prettier-plugin-twig"],
    "overrides": [
        {
            "files": "*.php",
            "options": {
              "parser": "php"
            }
        },
        {
            "files": "*.twig",
            "options": {
                "parser": "twig",
                "twigSingleQuote": true,
                "twigAlwaysBreakObjects": true,
                "twigFollowOfficialCodingStandards": true,
                "twigOutputEndblockName": false,
                "twigIndentInnerHtml": false,
                "twigMultiLine": false,
                "twigFormatEmbeddedCode": false
            }
        }
    ]
}
