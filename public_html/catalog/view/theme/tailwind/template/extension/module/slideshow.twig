<div id="slider-{{ module }}" class="slider">
    <div class="slider-track">
        {% for banner in banners %}
            <div class="slider-slide">
                {% if banner.link %}
                    <a href="{{ banner.link }}">
                        <img src="{{ banner.image }}" alt="{{ banner.title|e }}" class="img-responsive" />
                    </a>
                {% else %}
                    <img src="{{ banner.image }}" alt="{{ banner.title|e }}" class="img-responsive" />
                {% endif %}
            </div>
        {% endfor %}
    </div>
</div>

<div class="slider-controls mt-4 flex gap-2 justify-end">
    <button id="slider-prev-{{ module }}" class="button-secondary icon">
        <svg aria-hidden="true" viewBox="0 0 24 24">
            <use href="/assets/icons/sprite.svg#icon-chevron-left"></use>
        </svg>
    </button>
    <button id="slider-next-{{ module }}" class="button-secondary icon">
        <svg aria-hidden="true" viewBox="0 0 24 24">
            <use href="/assets/icons/sprite.svg#icon-chevron-right"></use>
        </svg>
    </button>
</div>

{# prettier-ignore-start #}
<script type="module">
    import EmblaCarousel from 'https://cdn.skypack.dev/embla-carousel';

    const slider = document.getElementById('slider-{{ module }}');
    if (slider) {
        const embla = EmblaCarousel(slider, { loop: true });

        document.getElementById('slider-prev-{{ module }}')?.addEventListener('click', () => embla.scrollPrev());
        document.getElementById('slider-next-{{ module }}')?.addEventListener('click', () => embla.scrollNext());
    }
</script>
{# prettier-ignore-end #}
